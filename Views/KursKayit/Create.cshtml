@model KursKayit
<h2>Kurs kaydı Ekle</h2>
<hr>
<form asp-controller="KursKayit" asp-action="create" method="post">
    <div class="mb-3">
        <label asp-for="OgrenciId" class="form-label">Öğrençi Adı</label>
        <select asp-items="ViewBag.Ogrenciler" class="form-control"></select>
    </div>

    <div class="mb-3">
        <label asp-for="KursId" class="form-label">Kurs</label>
        <select asp-items="ViewBag.Kurslar" class="form-control"></select>
    </div>

<button type="submit" class="btn btn-success">Kaydet</button>

</form>