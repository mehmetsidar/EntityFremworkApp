@model KursKayit
<h2>Kurs kaydı Ekle</h2>
<hr>
<form asp-controller="KursKayit" asp-action="create" method="post">
    <div class="mb-3">
        <label asp-for="OgrenciId" class="form-label">Öğrençi Seç</label>
        <select asp-for="OgrenciId" asp-items="ViewBag.Ogrenciler" class="form-select">
            <option value="">Seçiniz</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="KursId" class="form-label">Kurs Seç</label>
        <select asp-for="KursId" asp-items="ViewBag.Kurslar" class="form-select">
            <option value="">Seçiniz</option>
        </select>
    </div>

<button type="submit" class="btn btn-success">Kaydet</button>

</form>